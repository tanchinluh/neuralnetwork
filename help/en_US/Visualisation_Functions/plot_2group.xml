<refsynopsisdiv>
   <title>Syntax</title>
   <synopsis>
   plot_2group(p,t)
   plot_2group(p,t,marker0, marker1)
   
   </synopsis>
</refsynopsisdiv>

<refsection>
   <title>Parameters</title>
   <variablelist>
